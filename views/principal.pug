extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand(href="#") Airlane CR
    button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
      span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarNav
      ul.navbar-nav.ml-auto.align-items-start
        li.nav-item
          a.nav-link(href="/principal") Inicio
        li.nav-item
          a.nav-link(href="") Mis vuelos
        li.nav-item
          a.nav-link(href="/auth/login") Logout

  .containernew
    h1 Lista de aerol√≠neas
    table
      tr
        th Aerolinea
        th Asiento
        th Destino
        th Fecha Llegada
        th Fecha Salida
        th Pais de Salida
        th Precio
        th Shopping Cart
      each aerolinea in aerolineas
        tr
          td= aerolinea.Aerolinea
          td= aerolinea.Asiento
          td= aerolinea.Destino
          td= aerolinea.FechaLlegada
          td= aerolinea.FechaSalida
          td= aerolinea.PaisSalida
          td= aerolinea.Precio
          td
            form(action="/comprar" method="POST", class="containernew")
              input(type="hidden", class="form-input", name="aerolineaId", value=aerolinea._id)
              input(type="hidden", class="form-input", name="asiento", value=aerolinea.Asiento)
              input(type="hidden", class="form-input", name="destino", value=aerolinea.Destino)
              input(type="hidden", class="form-input", name="fechaLlegada", value=aerolinea.FechaLlegada)
              input(type="hidden", class="form-input", name="fechaSalida", value=aerolinea.FechaSalida)
              input(type="hidden", class="form-input", name="paisSalida", value=aerolinea.PaisSalida)
              input(type="hidden", class="form-input", name="precio", value=aerolinea.Precio)
              button(type="submit", class="btn-comprar") Comprar
